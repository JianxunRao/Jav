<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cv_search_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_search_result"
                android:layout_width="120dp"
                android:layout_height="180dp"
                />
            <TextView
                android:id="@+id/tv_search_result_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名称名称名称名称名称名称名称名称名称名"
                android:textSize="16sp"
                android:maxLines="2"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/iv_search_result"/>
                />
            <TextView
                android:id="@+id/tv_search_resullt_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/iv_search_result"
                android:layout_below="@id/tv_search_result_name"
                android:text="AKB-48"/>
            <TextView
                android:id="@+id/tv_search_resullt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_search_result_name"
                android:text="2013-5-3"
                />
            <TextView
                android:id="@+id/tv_search_result_actress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_search_result"
                android:layout_toRightOf="@id/iv_search_result"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:text="演员演员"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/tv_search_result_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_search_result_actress"
                android:layout_toRightOf="@id/iv_search_result"
                android:text="类别类别类别类别类别类别类别类别类别类别类别"
                android:maxLines="2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/tv_search_resullt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_search_result"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="14124"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_border_black_18dp"
                android:alpha="50"
                android:layout_toLeftOf="@id/tv_search_resullt_like"
                android:layout_alignBottom="@id/tv_search_resullt_like"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

