<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/civ_actress_img"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/r101"
    android:layout_margin="16dp"
    app:civ_border_width="2dp"
    app:civ_border_color="@color/colorAccent"
    />
    <TextView
        android:id="@+id/tv_actress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/civ_actress_img"
        android:text="Yui Hatano"
        android:layout_alignTop="@id/civ_actress_img"
        android:layout_toEndOf="@+id/civ_actress_img"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
</RelativeLayout>